---
import Layout from '../layouts/Layout.astro';
import LinkButton from '../components/LinkButton.astro';
import TopNav from '../components/TopNav.astro';
import Accomplishments from '../components/Accomplishments.astro';

const mhUrl = "https://www.modernhealth.com/";
const anomalieUrl = "https://www.retaildive.com/news/davids-bridal-acquires-custom-wedding-dress-startup-anomalie/623973/";
const sfUrl = "https://www.stitchfix.com/";
const modClothUrl = "http://www.modcloth.com";
const builtUrl = "http://www.getBuilt.com";
---

<Layout title="Brian Cleveland personal portfolio - Design Leader, Design Systems Designer, and Startup Strategist">
  <TopNav />
	<main>
    <header class="content-section">
      <h1 class="heading-3 all-caps soft">Brian Cleveland</h1>
      <h2 class="heading-1">Design Leader, Design Systems Designer, & Startup Strategist</h2>
      <nav class="navigation-list">
        <ul>
          <li>
            <LinkButton href="#" label="My Resume" />
          </li>
          <li>
            <LinkButton href="#" label="LinkedIn" />
          </li>
          <li>
            <LinkButton href="#" label="Medium" />
          </li>
        </ul>
      </nav>
    </header>
    <article class="content-section">
      <p class="body-3">
        With 14 years of experience in design and development at leading product-driven tech companies, I thrive on transforming visions into tangible solutions. My expertise spans diverse platforms, services, and products, but my true passion lies in creating meaningful experiences for people, especially those on my teams.
      </p>
      <p class="body-3">
        Staff designer at <a href={builtUrl} target="_blank">Built Technologies</a> and <a href={mhUrl} target="_blank">Modern Health</a>. Head of design at <a href={anomalieUrl} target="_blank">Anomalie</a> (acquired by Davidâ€™s Bridal). First designer and later first front-end engineer at <a href={sfUrl} target="_blank">Stitch Fix</a>. Interaction designer at <a href={modClothUrl} target="_blank">ModCloth</a>.
      </p>
    </article>
    <article class="content-section">
      <h2 class="heading-3">Accomplishments</h2>
      <Accomplishments />
    </article>
	</main>
</Layout>

<style>
  .heading-1,
  .heading-2,
  .heading-3,
  .heading-4,
  .heading-5,
  .heading-6 {
    line-height: 1.25;
  }

  .body-1,
  .body-2,
  .body-3,
  .body-4 {
    line-height: 1.5;
  }
  
  .content-section {
    display: flex;
    padding: var(--space-xl) var(--space-s);
    flex-direction: column;
    align-items: stretch;
    justify-content: center;
    gap: 2.5rem;
    align-self: stretch;
    max-width: 70.5rem;
    margin: auto;
  }

  .heading-1 {
    font: var(--font-heading-1);
  }
  
  .heading-2 {
    font: var(--font-heading-2);
  }

  .heading-3 {
    font: var(--font-heading-3);
  }

  .heading-4 {
    font: var(--font-heading-4);
  }

  .body-1 {
    font: var(--font-body-1);
  }

  .body-2 {
    font: var(--font-body-2);
  }

  .body-3 {
    font: var(--font-body-3);
  }

  .body-4 {
    font: var(--font-body-4);
  }
  .navigation-list > ul {
    list-style: none;
    display: flex;
    flex-direction: row;
    gap: var(--space-s);
  }

  .navigation-list li {
    display: flex;
  }

  @media only screen and (max-width: 380px) {
    .navigation-list > ul {
      flex-direction: column;
    }
  }
.all-caps {
  text-transform: uppercase;
  letter-spacing: 3px;
}

.soft {
  color: var(--color-secondary);
}
</style>
